@model IEnumerable<LEMS.Models.Labratory>

@{
    ViewData["Title"] = "Laboratory List";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center fw-bold">Laboratory List</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No laboratories available.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var lab in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100 border-0 rounded-4">
                        <div class="card-body">
                            <h5 class="card-title text-success fw-bold">@lab.Name</h5>
                            <p class="card-text mb-2">
                                <strong>Department:</strong> @lab.Department?.Name ?? "N/A"
                            </p>
                            <p class="card-text mb-2">
                                <strong>Location:</strong> @lab.Location
                            </p>
                            <p class="card-text text-muted">
                                <strong>Description:</strong> @lab.Description
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
