@model LEMS.Models.Branch

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center" style="border-bottom-width: thin; border-color: rgb(45, 108, 162) ">
        <h4 class="card-text mb-0">Create New Branch</h4>
        <a class="btn btn-outline-primary" asp-action="Index">
            <i class="fa fa-arrow-left me-1"></i>Back To List
        </a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <button type="submit" value="Create" class="btn btn-success">
                          <i class="fa fa-save me-1"></i>  Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
