@model IEnumerable<LEMS.Models.Department>

@{
    ViewData["Title"] = "Department List";
}

<style>
    .department-card {
        background: linear-gradient(to bottom right, #009688, #4db6ac); /* Teal shades */
        color: white;
    }
    .department-card h5,
    .department-card p {
        color: white;
    }
</style>

<div class="container mt-4">
    <h2 class="mb-4 text-center fw-bold text-teal">Department List</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">No departments available.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var department in Model)
            {
                <div class="col">
                    <div class="card department-card shadow-sm h-100 border-0 rounded-4">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@department.Name</h5>
                            <p class="card-text mb-0">
                                <strong>Branch:</strong> @department.Branch?.Name
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
