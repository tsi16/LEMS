@model LEMS.Models.Branch

@{
    ViewData["Title"] = "Delete";
}
<h3>Are you sure you want to delete this?</h3>
<div class="card shadow-none">
    <div class="card-header d-flex justify-content-between align-items-center border-bottom" style="border-color: rgb(45, 108, 162);">
        <h4 class="mb-0">Delete Branch</h4>
        <div class="d-flex gap-2">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" value="Delete" class="btn btn-danger">
                    <i class="fa fa-trash-alt me-1"></i> Yes Delete
                </button> 
                <a class="btn btn-outline-primary" asp-action="Index">
                    <i class="fa fa-arrow-left me-1"></i> Back To List
                </a>
            </form>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-sm table-responsive-sm table-borderless">
            <tr>
                <td class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </td>
                <th class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </th>
            </tr>
            <tr>
                <td class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IsActive)
                </td>
                <th class="col-sm-10">
                    @Html.DisplayFor(model => model.IsActive)
                </th>
            </tr>
        </table>
    </div>
</div>



