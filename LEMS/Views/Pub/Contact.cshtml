@model IEnumerable<LEMS.Models.LabratoryAssignment>

@{
    ViewData["Title"] = "Contact & Lab Info";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">🧪 Laboratory Contact Details</h2>

    @foreach (var labasign in Model)
    {
        <div class="card shadow-lg p-4 mx-auto mb-4 bg-white" style="max-width: 850px; border-radius: 20px;">
            <div class="row g-4 align-items-start">
                <!-- Left Column: Lab Info -->
                <div class="col-md-6">
                    <h4 class="fw-bold text-success mb-3">🔬 Laboratory Information</h4>
                    <p class="mb-2"><strong>Name:</strong> @labasign.Labratory?.Name</p>
                    <p class="mb-2"><strong>Assigned Date:</strong> @labasign.AssignedDate.ToShortDateString()</p>
                    <p class="mb-2"><strong>Action By:</strong> @labasign.ActionBy</p>
                    <p class="mb-2"><strong>Active:</strong> @(labasign.IsActive ? "Yes" : "No")</p>
                </div>

                <!-- Right Column: Contact Info -->
                <div class="col-md-6">
                    <h4 class="fw-bold text-primary mb-3">📞 Assigned Contact</h4>

                    @if (labasign.User != null)
                    {
                        <p class="mb-2"><strong>👤 Name:</strong> @labasign.User.FirstName @labasign.User.LastName</p>
                        <p class="mb-2"><strong>📧 Email:</strong> @labasign.User.Email</p>
                        <p class="mb-2"><strong>📱 Phone:</strong> @labasign.User.PhoneNumber</p>
                    }
                    else
                    {
                        <p class="text-muted">No user assigned to this lab.</p>
                    }
                </div>
            </div>
        </div>
    }
</div>
