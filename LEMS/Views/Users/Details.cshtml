<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<!-- Button -->
<button class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#assignLabModal">
    + Assign Laboratory
</button>

<!-- Modal -->
<div class="modal fade" id="assignLabModal" tabindex="-1" aria-labelledby="assignLabModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="AssignLab" asp-controller="Users" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Assign Laboratory to @Model.FirstName</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="userId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">Select Laboratory</label>
                        <select name="labratoryId" class="form-select" required>
                            <option value="">-- Select Lab --</option>
                            @foreach (var lab in (SelectList)ViewBag.Labs)
                            {
                                <option value="@lab.Value">@lab.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Assign</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model.LabratoryAssignmentUsers != null && Model.LabratoryAssignmentUsers.Any())
{
    <h5 class="mt-4 text-success">Assigned Laboratories</h5>
    <ul class="list-group mb-3">
        @foreach (var lab in Model.LabratoryAssignmentUsers)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @lab.Labratory?.Name
                <span class="badge bg-primary">@lab.AssignedDate.ToShortDateString()</span>
            </li>
        }
    </ul>
}

